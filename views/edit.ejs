<!-- Header File Added-->
<%- include('partials/header'); -%>

<!-- Blog -->

    <div class="ui main text container">
        <div class="ui huge header">
            Edit
            <%= blog.title %>
        </div>

        <!-- Form -->
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value=" <%= blog.title %> ">
            </div>
            <div class="field">
                <label>Body</label>
                <textarea name="blog[body]"> 
                     <%= blog.body %>
                </textarea>
            </div>
            <input class="ui blue inverted button" type="submit">
        </form>

    </div>

<!-- Footer File Added-->

    <%- include('partials/footer'); -%>